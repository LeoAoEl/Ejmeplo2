---
import MainLayout from "../layouts/MainLayout.astro";
import Title from "../components/Title.astro";
import type { PokemonListResponse } from "../interfaces/pokemon-list";
import PokemonCard from "../components/PokemonCard.astro";

const name = "Listado de Pok√©mons";
const resp = await fetch("https://pokeapi.co/api/v2/pokemon/");
const data = (await resp.json()) as PokemonListResponse;
---

<MainLayout title={"About"}>
  <Title title={`About & ${name}`} />

  <main
    aria-label="Lista de pokemons"
    class="grid grid-cols-1 md:grid-cols-5 mt-8 gap-4"
  >
    {data.results.map(({ name, url }) => <PokemonCard name={name} url={url} />)}
  </main>
</MainLayout>
